{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "drizzle/",
      "prisma/",
      "public/",
      "build/",
      "dist/",
      ".local/",
      ".next/",
      ".vercel/",
      ".wrangler/",
      "cdk.out/",
      ".sst/",
      "*.json",
      "*.d.ts",
      "styled-system/*",
      "bin/*.js",
      "**/*.js",
      "generated/**/*",
      "dist/**/*"
    ],
    "ignoreUnknown": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessFragments": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentWidth": 2,
    "indentStyle": "space",
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "lineWidth": 120,
      "indentWidth": 2,
      "indentStyle": "space",
      "trailingCommas": "all",
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "arrowParentheses": "always"
    }
  },
  "json": {
    "formatter": {
      "enabled": false
    }
  }
}
