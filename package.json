{
  "name": "supereffective-assets",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:vercel": "pnpm pkg:database migrate && turbo run build",
    "codegen": "pnpm data:update && pnpm pkg:generator build && pnpm pkg:generator make sprite-indices && pnpm pkg:generator make data-types && pnpm data:validate",
    "data:update": "pnpm pkg:datalayer showdown:import",
    "data:validate": "pnpm pkg:datalayer validate",
    "dev": "env-cmd turbo run dev --no-deps --no-cache --parallel --concurrency 20",
    "format": "pnpm pretty && pnpm lint:fix",
    "postinstall": "husky install && pnpm pretty:pkgjsons",
    "lint": "turbo run lint:all",
    "lint:all": "eslint ./packages && pnpm -r run lint",
    "lint:all:fix": "eslint ./packages --fix && pnpm -r run lint:fix",
    "lint:fix": "turbo run lint:all:fix",
    "pkg:admin": "env-cmd pnpm --filter '@app/admin'",
    "pkg:datalayer": "env-cmd pnpm --filter '@pkg/datalayer'",
    "pkg:generator": "env-cmd pnpm --filter '@app/generator-cli'",
    "pkg:utils": "env-cmd pnpm --filter '@pkg/utils'",
    "pretty": "turbo run pretty:all",
    "pretty:all": "pnpm pretty:code && pnpm pretty:pkgjsons",
    "pretty:code": "prettier --write \"**/*.{cjs,mjs,js,ts,tsx,json,yml,yaml,css,scss,md,mdx}\"",
    "pretty:pkgjsons": "sort-package-json \"package.json\" \"packages/*/package.json\"",
    "start": "pnpm dev",
    "test": "turbo run test:all",
    "test:all": "env-cmd jest",
    "test:coverage": "env-cmd pnpm test -- -- --coverage"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react-hooks": "^1.0.0",
    "eslint-config-turbo": "^1.10.12",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-vitest": "^0.2.6",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "pretty-quick": "^3.1.3",
    "sort-package-json": "^2.5.1",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@swc/core": "^1.3.71",
    "@swc/jest": "^0.2.27",
    "@types/jest": "^29.5.3",
    "env-cmd": "^10.1.0",
    "jest": "^29.6.1"
  },
  "packageManager": "pnpm@8.6.1",
  "engines": {
    "node": ">=18.5.0"
  },
  "prisma": {
    "schema": "packages/database/prisma/schema.prisma"
  }
}
