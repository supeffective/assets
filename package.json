{
  "name": "supereffective-assets",
  "version": "5.0.0",
  "private": true,
  "scripts": {
    "convert-sprites": "./utils/convert-sprites.sh",
    "dev": "open http://localhost:3999/assets/images/pokeball.png && pnpm -r --parallel dev",
    "format": "pnpm prettier-fix && pnpm format-package-json",
    "format-package-json": "sort-package-json package.json assets-server/package.json",
    "postinstall": "pnpm lint-staged || echo 'postinstall failed'",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "quality-checks": "pnpm prettier-check && pnpm type-check",
    "start": "pnpm dev",
    "type-check": "pnpm -r type-check"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,jsx,ts,cts,mts,tsx}": [
      "prettier --ignore-unknown --write"
    ],
    "*.{json,yml,yaml,css,scss,sass,less,md,mdx}": [
      "prettier --ignore-unknown --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.8.7",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "sort-package-json": "^2.6.0",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=18.5.0"
  }
}
