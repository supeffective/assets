{
  "name": "supereffective-assets",
  "version": "0.3.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clear-cache": "rm -rf packages/*/.turbo && rm -rf packages/*/.next && jest --clearCache",
    "codegen": "pnpm data:update && pnpm pkg:generator build && pnpm pkg:generator make sprite-indices && pnpm pkg:generator make data-types && pnpm data:validate",
    "data:update": "pnpm pkg:datalayer showdown:import",
    "data:validate": "pnpm pkg:datalayer validate",
    "dev": "turbo build && open http://localhost:3151 && env-cmd turbo run dev --no-deps --no-cache --parallel --concurrency 20",
    "format": "pnpm lint-fix && pnpm prettier-fix",
    "hooks:pre-commit": "pnpm lint-staged",
    "hooks:pre-push": "pnpm run quality-checks",
    "postinstall": "pnpm lint-staged || echo 'postinstall failed'",
    "lint": "turbo run lint:all",
    "lint-fix": "turbo lint:all-fix",
    "lint:all": "eslint ./packages && pnpm -r run lint",
    "lint:all-fix": "eslint ./packages --fix && pnpm -r run lint-fix",
    "pkg:admin": "env-cmd pnpm --filter '@app/admin'",
    "pkg:datalayer": "env-cmd pnpm --filter '@pkg/datalayer'",
    "pkg:generator": "env-cmd pnpm --filter '@app/generator-cli'",
    "pkg:utils": "env-cmd pnpm --filter '@pkg/utils'",
    "prepare": "husky install",
    "prettier-check": "prettier --check .",
    "prettier-fix": "prettier --write .",
    "pretty": "pnpm run format",
    "publint-check": "turbo publint-check",
    "quality-checks": "pnpm prettier-check && pnpm type-check && pnpm lint && pnpm build && pnpm publint && pnpm test:ci",
    "test": "pnpm test:all",
    "test:all": "env-cmd jest",
    "test:ci": "turbo run test:all -- --ci --coverage",
    "test:coverage": "env-cmd pnpm test -- --coverage",
    "type-check": "turbo type-check",
    "version:bump": ".scripts/bump-version.sh patch && .scripts/tag-version.sh",
    "version:bump-major": ".scripts/bump-version.sh major && .scripts/tag-version.sh",
    "version:bump-minor": ".scripts/bump-version.sh minor && .scripts/tag-version.sh",
    "version:bump-patch": "pnpm version:bump",
    "version:publish": "pnpm run version:publish-gh-refs && pnpm run version:publish-npm",
    "version:publish-gh-refs": "git push origin main --tags",
    "version:publish-gh-releases": ".scripts/tag-release-gh.sh",
    "version:publish-npm": "pnpm -r --filter='@supeffective/*' exec pnpm publish"
  },
  "lint-staged": {
    "*.{js,cjs,mjs,jsx,ts,cts,mts,tsx}": [
      "prettier --ignore-unknown --write"
    ],
    "*.{json,yml,yaml,css,scss,sass,less,md,mdx}": [
      "prettier --ignore-unknown --write"
    ]
  },
  "prettier": "@r1stack/coding-style/prettier",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@r1stack/coding-style": "^0.4.5",
    "@swc/core": "^1.3.83",
    "@swc/jest": "^0.2.29",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "changelogen": "^0.5.5",
    "env-cmd": "^10.1.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-react-hooks": "^1.0.0",
    "eslint-config-turbo": "^1.10.13",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-packagejson": "^2.4.5",
    "semver": "^7.5.4",
    "turbo": "^1.10.13",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.7.4",
  "engines": {
    "node": ">=18.5.0"
  }
}
