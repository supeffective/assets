{
  "name": "@app/assets-server",
  "version": "4.1.2",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup server/index.ts --format=cjs --clean --sourcemap --no-splitting --dts",
    "dev": "pnpm build && concurrently \"pnpm dev:watch\" \"nodemon -q dist/index.js\"",
    "dev:watch": "tsup server/index.ts --format=cjs --clean --sourcemap --no-splitting --watch --dts",
    "start": "pnpm build && node dist/index.js"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.0",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "tsup": "^7.2.0"
  }
}
