{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist/source",
    "declaration": true,
    "declarationDir": "dist/types",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
